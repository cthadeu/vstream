@page
@using video_streamming_proxy.Domain

@{
    Layout = null;
}

<!DOCTYPE html>
@{
    Media[] data = ViewBag.Items;
}
<html>
<head>
    <title>Content</title>
</head>
<body>
<div>
    <h3>Videos</h3>
    <br>  
    <table border="1" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Slug</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach(var item in data)
                {
                    <tr>
                        <td><a href='/Home/Videos?vname=@item.Id.Replace("-","")'>@item.Id</a></td>
                        <td>@item.Name</td>
                        <td>@item.Slug</td>
                    </tr>
                }
            
            
        </tbody>
    </table>
    <a href="/Home/Videos?vname=test1">Videos</a>
    <br>
    <a href="/Upload">Upload</a>

</div>
</body>
</html>