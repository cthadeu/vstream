@page
@using video_streamming_proxy.Domain

@{
    Layout = "_Main";
    
}

<!DOCTYPE html>
@{
    Course[] data = ViewBag.Courses;
}

<div class="bg-light-gray h-full px-6">
    <div class="container mx-auto">
        <h1 class="text-xl font-semibold dark-gray mb-6 lg:py-10 py-8">Featured Classifieds</h1>
        <div class="flex flex-wrap">
        
                @foreach (var course in data) 
                { 
                
                <div class="mx-2 w-64">
                    <div>
                        <img src="@course.GetThumbnailImage()" class="w-full h-44" />
                    </div>
                    <div class="bg-white">
                        <div class="p-4">
                            <div class="flex items-center">
                                <h2 class="text-lg font-semibold dark-gray">@course.Name</h2>                                
                            </div>
                            <p class="text-xs light-gray mt-2">@course.Description</p>
                            
                            <div class="flex items-center">
                                <h3 class="purple text-xl font-semibold">$@course.Amount</h3>
                            </div>
                            <div class="flex items-center align-center  py-4">
                                <a href="/user/courses/@course.Slug/purchase" class="bg-slate-900 mr-5 text-white p-3">
                                    Comprar
                                </a>
                                <a href="/courses/@course.Slug" class="p-3 bg-gray-300">Ver mais</a>
                                
                            </div>
                        </div>
                    </div>
                </div>
                
                }
        </div>   
    </div>
</div>
