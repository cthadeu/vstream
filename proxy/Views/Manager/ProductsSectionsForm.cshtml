@model video_streamming_proxy.Controllers.Manager.ProductRequest
@using video_streamming_proxy.Domain

@{
    Layout = "_Manager";
}
@{
    Course course = ViewBag.Course; 
}

<!DOCTYPE html>
<div class="flex flex-nowrap">
    
    <form action="/manager/products/@course.Id/sections" enctype="multipart/form-data" method="POST">
        <div>
            <h3 class="mb-5 font-bold">Nova Seção</h3>
        </div>    
        <div class="mb-3">
            <input type="text" class="border-2 p-2" name="title" size="60" placeholder="Titulo" id="title" />
        </div>
        <div class="mb-3">            
            <input type="text" class="border-2 p-2" name="description" size="100" placeholder="Description" id="description" />
        </div>
        <div>Thumbnail</div>
        <div class="mb-3">            
            <input name="thumbnail" class="border-2 p-2" placeholder="Thumbnail" type="file" />
        </div>
        <div>Video</div>
        <div class="mb-3">            
            <input name="videoFile" class="border-2 p-2" placeholder="Video" type="file" />
        </div>
        <div >
            <button type="submit" class="p-2 bg-sky-900 text-white">Salvar</button>
            <button type="button" onClick='window.location="/manager/products/@course.Id/sections"' class="p-2 bg-gray-900 text-white">Cancelar</button>
        </div>
    </form>
</div>