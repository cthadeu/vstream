@page
@using video_streamming_proxy.Domain

@{
    Layout = "_Main";
}
<!DOCTYPE html>
@{
    Course course = ViewBag.Detail;
}
<form action="/user/courses/@course.Slug/purchase" method="POST">
    <input type="hidden" name="courseId" value="@course.Id" />
    <div class="w-full">
        <h1 class="text-3xl">@course.Name</h1>
        <br />
        <div class="p-3">
            <p>@course.Description</p>
            <div class="flex items-center justify-center items-strech mt-5 bg-green-600 p-4">
                <h2 class="text-2xl text-green-200 font-bold">Parabens! Você comprou o curso @course.Name . Ele já se encontra disponivel na sua área de cursos.</h2>                
            </div>
            <div class="flex items-center justify-center mt-2 p-4">
                <a href="/user/courses/@course.Id" class="p-3 bg-slate-900 text-white w-5 min-w-full mt-3">Ir para cursos</a>
            </div>
            
        </div>
        
        
    </div>
</form>