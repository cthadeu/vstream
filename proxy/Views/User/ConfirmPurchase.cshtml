@page
@using video_streamming_proxy.Domain

@{
    Layout = "_Main";
}
<!DOCTYPE html>
@{
    Course course = ViewBag.Detail;
    bool UserHasCourse = ViewBag.UserHasCourse;
}
<form action="/user/courses/@course.Slug/purchase" method="POST">
    <input type="hidden" name="courseId" value="@course.Id" />
    <div class="w-full">
        <h1 class="text-3xl">@course.Name</h1>
        <br />
        <div class="p-3">
            <p>@course.Description</p>
            <div class="flex items-center justify-center items-strech mt-5">
                @if (!UserHasCourse) 
                {
                    <button class="p-3 bg-slate-900 text-white w-3/6 " type="submit">Comprar</button>
                } else {
                    <a href="/user/courses/@course.Id" class="p-3 bg-slate-900 text-white w-5 min-w-full">Ir para curso</a>
                }
                
            </div>
        </div>
        
        
    </div>
</form>