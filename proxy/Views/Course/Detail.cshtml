@page
@using video_streamming_proxy.Domain

@{
    Layout = "_Main";
}
<!DOCTYPE html>
@{
    Course course = ViewBag.Detail;
}
<div class="w-full border border-inner">
    <div class="lg-p8">
<div class="lg:w-2/4 h-full lg:h-64">
    <div class="relative w-full h-64">
        <div class="w-full h-full">
            <div style="height: 100%" class="slider lg:relative w-full">
                <div class="slide-ana">
                    <div class="w-full relative">
                        <img src="https://cdn.tuk.dev/assets/templates/classified/Mask.png" class="w-full w-full h-full object-cover object-center" />
                    </div>
                    <div class="w-full relative">
                        <img src="https://cdn.tuk.dev/assets/templates/classified/Mask.png" class="w-full w-full h-full object-cover object-center" />
                    </div>
                </div>
            </div>

            <div class="flex items-center inset-0 absolute justify-between px-2">
                <div class="w-6 h-6 relative bg-white rounded-full flex inset-0 items-center justify-center cursor-pointer" id="prev">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-left" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <polyline points="15 6 9 12 15 18" />
                    </svg>
                </div>

                <div class="w-6 h-6 relative bg-white rounded-full flex inset-0 items-center justify-center cursor-pointer" id="next">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-right" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <polyline points="9 6 15 12 9 18" />
                    </svg>
                </div>
            </div>
        </div>
    </div>
    <div class="flex items-center justify-between h-16 relative bg-dark-gray">
        <div class="flex items-center justiy-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-left" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <polyline points="15 6 9 12 15 18" />
            </svg>
        </div>
        <div class="flex">
            <img src="https://cdn.tuk.dev/assets/templates/classified/Rectangle.png" class="mr-1" />
            <img src="https://cdn.tuk.dev/assets/templates/classified/Rectangle-Copy-4.png" class="mr-1" />
            <img src="https://cdn.tuk.dev/assets/templates/classified/Rectangle-Copy-5.png" class="mr-1" />
            <img src="https://cdn.tuk.dev/assets/templates/classified/Rectangle-Copy-6.png" class="mr-1" />
            <img src="https://cdn.tuk.dev/assets/templates/classified/Rectangle-Copy-7.png" />
        </div>
        <div class="flex items-center justiy-end">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-right" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <polyline points="9 6 15 12 9 18" />
            </svg>
        </div>
    </div>
</div>

<div class="pl-6 pr-8">
    <h1 class="text-2xl font-semibold dark-gray lg:mt-0 mt-4">@course.Name</h1>
    <p class="text-xs line-height-18 light-gray py-3">
        @course.Description
        <br />
        <br />        
    </p>
    <div class="flex mt-4">
        <div>
            <p class="text-xs light-gray px-2 bg-dark-gray py-1">12 months warranty</p>
        </div>
        <div class="pl-2">
            <p class="text-xs light-gray px-2 bg-dark-gray py-1">Complete box</p>
        </div>
        <div class="pl-2">
            <p class="text-xs light-gray px-2 bg-dark-gray py-1">Complete box</p>
        </div>
    </div>
   
    <div class="flex items-center justify-between mt-8 py-4">
        <h2 class="purple text-sm font-semibold">Bay Area, San Francisco</h2>
        <h3 class="purple text-3xl font-semibold">$350</h3>
    </div>
</div>
</div>
</div>